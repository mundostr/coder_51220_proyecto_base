<style>
    .custom-list-item {
        background: #e1e1e1;
    }
</style>

<div class="row justify-content-end" style="background-color: #f1f1f1;">
    <div class="col-1 p-3">
        <button class="btn btn-success" onclick="handleLogout()"><i class="fas fa-sign-out-alt"></i> Salir</button>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 col-xs-12 p-3">
        <h2 class="mb-4"><b>Listado de productos en existencia</b></h2>

        <ul class="list-group">
            {{!--
            Recordar utilizar la palabra reservada this dentro del ciclo
            para acceder a los datos del elemento actual
            --}}
            {{#each products}}
            <li class="list-group-item d-flex justify-content-between align-items-center custom-list-item mb-3"
                >ID {{this.id}}, {{this.description}} (${{this.price}}) ({{this.stock}})
                <span class="badge">
                    <button class="btn btn-success"><i class="fas fa-cart-plus"></i> Agregar al carro</button>
                </span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<script>
    const handleLogout = () => {
        window.location.href = 'http://localhost:3000/logout';
    }
</script>